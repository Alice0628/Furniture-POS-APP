<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Email:" HorizontalAlignment="Left" Height="38" Margin="236,93,0,0" VerticalAlignment="Top" Width="96" FontSize="20" FontWeight="Bold" RenderTransformOrigin="0.41,0.501"/>
        <Label Content="Password:" HorizontalAlignment="Left" Height="38" Margin="236,190,0,0" VerticalAlignment="Top" Width="130" FontSize="20" FontWeight="Bold"/>
        <TextBox Name="tbxEmail" HorizontalAlignment="Left" Height="38" Margin="236,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="349" FontSize="20"/>
        <TextBox Name="tbxPass" HorizontalAlignment="Left" Height="38" Margin="236,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="349" FontSize="20"/>
        <Button Content="Sign in" HorizontalAlignment="Left" Margin="236,302,0,0" VerticalAlignment="Top" Height="29" Width="130" FontSize="18" Click="BtnSignin_Click"/>

    </Grid>
</Window>
